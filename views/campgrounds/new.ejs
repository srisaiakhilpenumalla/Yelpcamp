<%- include('../partials/header') -%>

<div class="row justify-content-center">
  <div class="col-md-12 text-center">
  <h1>Create new Campground</h1>
  </div>
  <div style="col-xs-12 col-md-6 col-lg-4">
    <form action="/campgrounds" method="post">
      <div class="form-group"><input class="form-control" type="text" name="name" placeholder="name" id="">
      </div>
      <div class="form-group"><input class="form-control" type="number" name="price" placeholder="price" min="0.1" step="0.1" id="">
      </div>
      <div class="form-group"><input class="form-control" type="text" name="image" placeholder="image url" id=""></div>
      <div class="form-group"><input class="form-control" type="text" name="location" id="location" placeholder="Yosemite National Park, CA"></div>
      <div class="form-group"><input class="form-control" type="textarea" name="description" placeholder="description" id=""></div>
      <div class="form-group"><button class="btn btn-lg btn-primary btn-block">Submit!</button></div>
    </form>
  </div>

</div>

<%- include('../partials/footer') -%>
