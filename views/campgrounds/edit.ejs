<%- include('../partials/header') -%>

    <div class="row">
      <div class="col-md-12 text-center">
      <h1>Edit <%= campground.name %> Campground</h1>
      </div>

        <div style="width: 30%; margin: 0 auto;">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="post">
                <div class="form-group"><input class="form-control" type="text" name="campground[name]" value="<%= campground.name %>" id="">
                </div>
                <div class="form-group"><input class="form-control" type="number" name="campground[price]" placeholder="<%= campground.price %>" min="0.1" step="0.1" id="">
                </div>
                <div class="form-group"><input class="form-control" type="text" name="campground[image]" value="<%= campground.image %>"
                        id=""></div>
                <div class="form-group"><input class="form-control" type="text" name="location" value="<%= campground.location %>" id="location" ></div>
                <div class="form-group"><input class="form-control" type="textarea" name="campground[description]"
                        value="<%= campground.description %>" id=""></div>
                <div class="form-group"><button class="btn btn-lg btn-primary btn-block">Submit!</button></div>
            </form>
            <a href="/campgrounds/<%= campground._id %>" class="form-group">Go Back</a>
        </div>

    </div>

<%- include('../partials/footer') -%>
